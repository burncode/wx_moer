/* pages/user/user.wxss */
.container {
    position: relative;
}
/* 未登录，选择登录方式 开始 */
.login {
    height: 100%;
}
.login .box {
    padding-top: 190rpx;
}
.login-wx, .login-moer {
    width: 520rpx;
    height: 85rpx;
    line-height: 85rpx;
    text-align: center;
    margin: 0 auto 45rpx;
    border-radius: calc(85rpx / 2); 
    border: 2rpx solid #e84c3d;
    font-size: 34rpx;
}
.login-wx {
    color: #fff;
    background: #e84c3d;
}
.login-wx.button-hover {
    background: #ce3d2f;
}
.login-moer {
    color: #e84c3d;
    background: #fff;
}
.login-moer.button-hover {
    background: #fdedeb;
}
.login-tips {
    font-size: 22rpx;
    color: #879193;
    text-align: center;
}
/* 未登录，选择登录方式 结束 */

/* 已登录状态 个人主页 开始 */
.home  {
    height: 100%;
    background: #f2f2f2;
}
.home .top {
    display: flex;
    padding: 30rpx;
    background: #fff;
}
.home .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}
.home .info {
    flex: 1;
    padding-left: 30rpx;
}
.home .info .name {
    line-height: 100rpx;
    font-size: 36rpx;
    color: #202d33;
}
.home .switch {
    display: inline-block;
    font-size: 28rpx;
    height: 54rpx;
    line-height: 54rpx;
    padding: 0 15rpx;
    border: 2rpx solid #202d33;
    margin-top: 20rpx;
    background: #fff;
    border-radius: 54rpx;
}
.home .switch.button-hover {
    background: #ffdbd8;
}
 
.home .main {
    margin-top: 20rpx;
    background: #fff;
}
.home .main .item {
    width: 100%;
    padding: 0;
    text-align: left;
    background: #fff;
    overflow: hidden;
}
.home .main .item-list {
    width: auto;
    height: 89rpx;
    display: flex;
    padding: 0;
    border-bottom: 2rpx solid #dedede;
    margin: 0 30rpx;
    text-align: left;
    background: none;
    line-height: 89rpx;
    border-radius: 0;
    font-size: 32rpx;
    overflow: hidden;
}
.home .main .item.active {
    background: #f5f5f5;
}
.navigator-hover {
    background: #fff;
}
.home .item:last-child .item-list {
    border-bottom: none;
}
.home .item image {
    width: 30rpx;
    height: 30rpx;
    margin: 28rpx 25rpx 0 0;
    vertical-align: top;
}
.home .item .type-text {
    display: inline-block;
    height: 88rpx;
    flex: 1;
}
.home .item .notice {
    text-align: right;
    color: #e84c3d;
    font-size: 28rpx;
}
.home .item .tips {
    flex: 2;
    color: #879193;
    font-size: 24rpx;
}
.home .item .arrow {
    position: relative;
    display: inline-block;
    width: 40rpx;
    height: 88rpx;
}
.home .arrow::before, .home .arrow::after {
    position: absolute;
    top: auto;
    right: 0;
    display: inline-block;
    content: '';
    width: 20rpx;
    height: 4rpx;
    background: #b0b0b0;
}
.home .arrow::before {
    top: 44%;
    transform: rotate(45deg);
}
.home .arrow::after {
    top: 58%;
    transform: rotate(-45deg);
}