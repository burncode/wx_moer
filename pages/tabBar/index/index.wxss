    overflow: hidden;
}
.brief .main {
    width: calc(100% - 80rpx);
    height: 80%;
    padding: 1% 0;
    margin: 9% auto 3%;
    border-radius: 15rpx;
    overflow-y: scroll;
    background: rgba(0, 0, 0, 0.85);
