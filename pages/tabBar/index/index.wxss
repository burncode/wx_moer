}
.brief .item {
    padding-bottom: 30rpx;
    margin: 40rpx 20rpx 0;
    font-size: 28rpx;
    line-height: 48rpx;
    color: #fff;
    border-bottom: 2rpx solid #333;
}
.brief .item:last-child {
    border-bottom: 0;
}
.brief .title {
    font-size: 32rpx;
    line-height: 32rpx;
    font-weight: bold;
}
.brief .title image{
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    margin-right: 15rpx;
    vertical-align: top;
}
.brief .info-title {
    font-size: 32rpx;
    line-height: 32rpx;
    margin: 40rpx 0 30rpx;
}
.brief .info-title text {
    display: inline-block;
    font-size: 60rpx;
    vertical-align: top;
}
.brief .info-text {
    margin: 20rpx 0 0;
}
.brief .info-text text {
    display: inline-block;
    font-size: 60rpx;
    vertical-align: top;
}
.brief .close {
    position: relative;
    width: 70rpx;
    height: 70rpx;
    margin: 2% auto 0;
    border-radius: 100%;
    background: rgba(0, 0, 0, 0.7);
    box-shadow: 0 0 40rpx rgba(0, 0, 0, 0.2);
}
.brief .close.active {
    background: rgba(0, 0, 0, 0.9);
}
.brief .close::before, .brief .close::after {
    position: absolute;
    top: 48%;
    content: '';
    width: 38rpx;
    height: 4rpx;
    background: #fff;
    border-radius: 4rpx;
}
.brief .close::before {
    left: 22.5%;
    transform: rotate(45deg);
}
.brief .close::after {
    left: 22.5%;
    transform: rotate(-45deg);
}


/* 广告 */
.ad {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9;
    width:100%;
    height:100%;
}
.ad image {
    display: block;
    max-width: 96%;
    margin: 20% auto 0;
}
.ad .adClose {
    position: relative;
    width: 70rpx;
    height: 70rpx;
    margin: 5% auto 0;
    border-radius: 100%;
    background: rgba(255,255,255,1);
    box-shadow: 0 0 32rpx rgba(51,51,51,1);
}
.ad .adClose.active {
    background: rgba(0, 0, 0, 0.9);
}
.ad .adClose::before, .ad .adClose::after {
    position: absolute;
    top: 48%;
    content: '';
    width: 38rpx;
    height: 4rpx;
    background: rgba(148,148,148,1);
    border-radius: 4rpx;
}
.ad .adClose::before {
    left: 22.9%;
    transform: rotate(45deg);
}
.ad .adClose::after {
    left: 22.9%;
    transform: rotate(-45deg);
}